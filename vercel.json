{
  "version": 2,
  "buildCommand": "npm run build --prefix Amar_Recipe",
  "outputDirectory": "Amar_Recipe/dist",
  "env": {
    "VITE_API_URL": "https://amar-recipes.infinityfreeapp.com/api"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Amar_Recipe/src/api/$1"
    },
    {
      "src": "/(.*\\.(?:js|jsx|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "^/(?!api).*",
      "dest": "/index.html"
    }
  ]
}
